{
  "name": "rock-solid",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf packages/*/dist packages/*/*.tsbuildinfo packages/backend/package.release.json packages/backend/import",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint . --resolve-plugins-relative-to . --ext .ts --ignore-path .gitignore",
    "build": "npm run build:db && npm run build:tsc:src && npm run build:fe",
    "build:tsc:src": "tsc -b packages/backend/tsconfig.src.json ",
    "build:db": "lerna run prisma:client:generate --scope=\"@rock-solid/backend\"",
    "build:fe": "lerna run build --scope=\"@rock-solid/frontend\"",
    "prestart": "npm run build",
    "start": "concurrently npm:start:tsc npm:start:backend npm:start:frontend",
    "start:backend": "cd packages/backend && npm run dev",
    "start:frontend": "cd packages/frontend && npm start",
    "start:tsc": "tsc -b -w",
    "test": "lerna run test --stream --concurrency 2",
    "docs:mermaid": "mmdc -i docs/erd.mmd -o docs/erd.svg",
    "docs:mermaid:watch": "node tasks/watch-mermaid.mjs",
    "import:az2csv": "az storage file download --share-name import --path import.zip --account-name $AZURE_STORAGE_ACCOUNT --account-key $AZURE_STORAGE_KEY && unzip import.zip -d . && rm import.zip",
    "import:csv2json": "node tasks/import-csv2json.mjs",
    "deploy:prepare": "tasks/prepare-deploy.sh",
    "deploy:acc:az": "az webapp deployment source config-zip --resource-group acc-rock-solid --name acc-rock-solid-web --src .deploy/deploy.zip",
    "deploy:acc": "npm run clean && npm run import:az2csv && npm run import:csv2json && npm run build && npm run deploy:prepare && npm run deploy:acc:az"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^9.1.7",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.6",
    "concurrently": "^7.4.0",
    "csv-parser": "^3.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lerna": "^5.6.1",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "strip-bom-stream": "^5.0.0",
    "supertest": "^6.3.0",
    "typescript": "^4.8.4"
  }
}
