{
  "name": "kei-crm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf packages/*/dist packages/*/*.tsbuildinfo",
    "postinstall": "npm run bootstrap && npm run link-parent-bin",
    "bootstrap": "lerna bootstrap",
    "link-parent-bin": "link-parent-bin",
    "lint": "eslint . --resolve-plugins-relative-to . --ext .ts --ignore-path .gitignore",
    "build": "tsc -b",
    "prestart": "npm run build",
    "start": "concurrently npm:start:tsc npm:start:backend npm:start:frontend",
    "start:backend": "cd packages/backend && npm start",
    "start:frontend": "cd packages/frontend && npm start",
    "start:tsc": "tsc -b -w",
    "test": "lerna run test --stream --concurrency 2",
    "docs:mermaid": "mmdc -i docs/erd.mmd -o docs/erd.svg",
    "docs:mermaid:watch": "node tasks/watch-mermaid.mjs",
    "import:csv2json": "node tasks/import-csv2json.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^8.14.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "^4.3.6",
    "concurrently": "^7.0.0",
    "csv-parser": "^3.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "link-parent-bin": "^2.0.0",
    "mocha": "^9.2.2",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "strip-bom-stream": "^5.0.0",
    "supertest": "^6.2.2",
    "typescript": "^4.6.2"
  }
}
