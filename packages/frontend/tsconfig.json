{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [],
    "resolveJsonModule": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "emitDecoratorMetadata": false,
    "module": "ES2022",
    "moduleResolution": "node",

  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ],
}
