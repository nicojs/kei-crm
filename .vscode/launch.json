  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸŒ± Seed database",
      "program": "${workspaceFolder}/packages/backend/dist/seed/all.seed.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "ðŸ§ª Run Backend Tests",
      "program": "./node_modules/mocha/bin/mocha",
      "args": [
        "--node-option",
        "enable-source-maps",
        "--timeout",
        "0",
        "--colors",
        "${workspaceFolder}/packages/backend/dist/**/*.test.js"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "outputCapture": "std",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "ðŸ§² Attach to backend",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "restart": true,
      "type": "node",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ]
    }
  ]
}
